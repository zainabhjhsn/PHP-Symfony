{% extends 'base.html.twig' %}

{% block title %}Project
{% endblock %}

{% block body %}

	<div class="my-4">
		<a href="{{ path('app_project_index') }}" class="btn btn-secondary">
			<i class="bi bi-arrow-left"></i>
			Back to List
		</a>
	</div>

	<h1 class="text-center">Project Details</h1>

	<div class="container mt-5">
		<div class="row justify-content-center">
			<div class="col-md-8">
				<table class="table table-bordered table-hover">
					<tbody>
						<tr>
							<th>Id</th>
							<td>{{ project.id }}</td>
						</tr>
						<tr>
							<th>Name</th>
							<td>{{ project.name }}</td>
						</tr>
						<tr>
							<th>Description</th>
							<td>{{ project.description }}</td>
						</tr>
						<tr>
							<th>Start Date</th>
							<td>{{ project.startDate ? project.startDate|date('Y-m-d H:i:s') : '-' }}</td>
						</tr>
						<tr>
							<th>End Date</th>
							<td>{{ project.endDate ? project.endDate|date('Y-m-d H:i:s') : '-' }}</td>
						</tr>
						<tr>
							<th>Status</th>
							<td>
								{% set status = project.status|lower|trim %}
								{% if status == 'active' %}
									<span class="badge bg-success">{{ project.status }}</span>
								{% elseif status == 'pending' %}
									<span class="badge bg-warning text-dark">{{ project.status }}</span>
								{% else %}
									<span class="badge bg-secondary">{{ project.status }}</span>
								{% endif %}
							</td>
						</tr>
						<tr>
							<th>Budget</th>
							<td>{{ project.budget }}$</td>
						</tr>
					</tbody>
				</table>

				<div class="d-flex justify-content-end gap-2 mt-3">
					<a href="{{ path('app_project_edit', {'id': project.id}) }}" class="btn btn-primary">
						<i class="bi bi-pencil-square"></i>
						Edit
					</a>

					{{ include('project/_delete_form.html.twig') }}
				</div>
			</div>
		</div>
	</div>

{% endblock %}
