{% extends 'base.html.twig' %}

{% block title %}Projects
{% endblock %}

{% block body %}

	<nav class="navbar navbar-expand-lg navbar-light mb-4">
		<div class="container-fluid">

			{% if app.user %}
				<span class="navbar-text d-flex align-items-center">
					<i class="bi bi-person-circle me-2"></i>
					{{ app.user.username }}
				</span>
			{% endif %}


			<div class="d-flex ms-auto">
				{% if app.user %}
					<a class="btn btn-danger" href="{{ path('app_logout') }}">Logout</a>
				{% endif %}
			</div>
		</div>
	</nav>

	<div class="container mt-5">

		{% if app.user %}

			<h1 class="text-center mb-4">Project List</h1>

			<div class="mb-4">
				<a href="{{ path('app_project_new') }}" class="btn btn-success">
					<i class="bi bi-plus"></i>
					Create New Project</a>
			</div>

			<div class="table-responsive">
				<table class="table table-hover table-bordered">
					<thead class="table-light">
						<tr>
							<th>#</th>
							<th>Name</th>
							<th>Description</th>
							<th>Start Date</th>
							<th>End Date</th>
							<th>Status</th>
							<th>Budget</th>
							<th class="text-center">Actions</th>
						</tr>
					</thead>
					<tbody>
						{% for project in projects %}
							<tr style="cursor: pointer;" onclick="window.location='{{ path('app_project_show', {'id': project.id}) }}'">
								<td>{{ project.id }}</td>
								<td>{{ project.name }}</td>
								<td>{{ project.description }}</td>
								<td>{{ project.startDate ? project.startDate|date('Y-m-d') : '' }}</td>
								<td>{{ project.endDate ? project.endDate|date('Y-m-d') : '_' }}</td>
								<td>
									{% set status = project.status|lower|trim %}
									{% if status == 'active' %}
										<span class="badge bg-success">{{ project.status }}</span>
									{% elseif status == 'pending' %}
										<span class="badge bg-warning text-dark">{{ project.status }}</span>
									{% else %}
										<span class="badge bg-secondary">{{ project.status }}</span>
									{% endif %}
								</td>

								<td>{{ project.budget }}$</td>
								<td class="text-center">
									<a class="btn btn-sm btn-outline-dark" href="{{ path('app_project_show', {'id': project.id}) }}">
										<i class="bi bi-eye"></i>
										View
									</a>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="8" class="text-center">No records found</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			{% else %}
				<div class="d-flex justify-content-center align-items-center" style="height: 50vh;">
					<h3 class="text-muted text-center">
						Please
						<a href="{{ path('app_login') }}">login</a>
						to see your projects.
					</h3>
				</div>
			{% endif %}


		</div>
	{% endblock %}
